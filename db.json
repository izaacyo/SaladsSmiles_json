        {
          "id": 2,
          "step": "step 2",
          "instructions": "Drain them and let them cool"
        },
        {
          "id": 3,
          "step": "step 3",
          "instructions": "Put the butter in a pot, add the garlic and the cold carrots"
        },
        {
          "id": 4,
          "step": "step 4",
          "instructions": "Spice them with salt, pepper, parsley and oregano and fry them 1-2 minutes on both sides"
        },
        {
          "id": 5,
          "step": "step 5",
          "instructions": "Add the sliced olives and fry everything for more 3 minutes"
